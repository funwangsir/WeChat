<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed"
    tools:context=".otherlayout.MyInfo">
    <!--    顶部状态栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_bar_bg"
        >
        <ImageButton
            android:id="@+id/myinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/myinfo_back"
            android:text="个人信息"
            android:textColor="#171717"
            android:textSize="@dimen/default_title_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="#191919"
            android:textSize="@dimen/default_font_size"
            />
        <ImageView
            android:id="@+id/myinfo_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_avatar"
            android:layout_toLeftOf="@+id/myinfo_1"
            />
        <ImageView
            android:id="@+id/myinfo_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#e5e5e5"
        android:layout_marginLeft="62dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="昵称"/>
        <TextView
            android:id="@+id/myinfo_mynickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称xxx"
            android:textSize="@dimen/default_font_size"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myinfo_2"/>
        <ImageView
            android:id="@+id/myinfo_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#e5e5e5"
        android:layout_marginLeft="62dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="手机号"/>
        <TextView
            android:id="@+id/myinfo_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="@dimen/default_font_size"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myinfo_3"/>
        <ImageView
            android:id="@+id/myinfo_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#e5e5e5"
        android:layout_marginLeft="62dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="微信号"/>
        <TextView
            android:id="@+id/myinfo_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="@dimen/default_font_size"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myinfo_4"/>
        <ImageView
            android:id="@+id/myinfo_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#e5e5e5"
        android:layout_marginLeft="62dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="真实姓名"/>
        <TextView
            android:id="@+id/myinfo_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="@dimen/default_font_size"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myinfo_5"/>
        <ImageView
            android:id="@+id/myinfo_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#e5e5e5"
        android:layout_marginLeft="62dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="更多"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/default_font_size"
            android:textColor="#191919"
            android:text="我的地址"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_go"/>
    </RelativeLayout>
</LinearLayout>