    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_high"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
